<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1500"
        motion:autoTransition="animateToEnd"
        motion:motionInterpolator="cubic(1,0,1,0)">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/trackitLogo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="240dp"
            android:layout_height="240dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.497"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:rotationX="87"
            android:rotation="0"
            android:scaleX="0"
            android:scaleY="0" />
        <Constraint
            android:layout_height="150dp"
            motion:layout_constraintStart_toStartOf="@+id/trackitLogo"
            motion:layout_constraintEnd_toEndOf="@+id/trackitLogo"
            android:layout_width="150dp"
            android:id="@+id/trackitText"
            motion:layout_constraintTop_toTopOf="@+id/trackitLogo"
            motion:layout_constraintBottom_toBottomOf="@+id/trackitLogo"
            android:scaleX="0"
            android:visibility="invisible"
            android:scaleY="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/trackitLogo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="240dp"
            android:layout_height="240dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.497"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:rotationX="0"
            android:scaleY="1"
            android:scaleX="1"
            motion:transitionEasing="cubic(0.49,0.03,0.91,0.65)" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/imageView"
            motion:layout_constraintTop_toTopOf="@+id/trackitLogo"
            motion:layout_constraintBottom_toBottomOf="@+id/trackitLogo"
            motion:layout_constraintEnd_toEndOf="@+id/trackitLogo"
            motion:layout_constraintStart_toStartOf="@+id/trackitLogo" />
        <Constraint
            android:layout_height="150dp"
            motion:layout_constraintStart_toStartOf="@+id/trackitLogo"
            motion:layout_constraintEnd_toEndOf="@+id/trackitLogo"
            android:layout_width="150dp"
            android:id="@+id/trackitText"
            motion:layout_constraintTop_toTopOf="@+id/trackitLogo"
            motion:layout_constraintBottom_toBottomOf="@+id/trackitLogo"
            android:scaleY="1"
            android:scaleX="1"
            android:visibility="visible" />
    </ConstraintSet>
</MotionScene>